<h2>All posts</h2>

<ul>
  <% collections.posts.reverse().forEach((post) => { %>
  <li>
    <a href="<%= post.url %>" class="text-link" style="font-size: 1.5rem"
      ><%= post.data.title %></a
    >
    <br />
    <span><%= post.data.description %></span>
    <div style="color: gray">
      <%= this.dateFns.format(new Date(post.data.date), 'LLLL d, yyyy') %>
    </div>
  </li>
  <% }) %>
</ul>

---
pagination:
  data: collections.posts
  size: 3
  alias: list
  reverse: true
permalink: '<% if (pagination.pageNumber > 0) { %><%= `page${pagination.pageNumber + 1}/index.html` %><% } else { %>index.html<% } %>'
eleventyComputed:
  title: '<% if (pagination.pageNumber > 0) { %><%= `Page ${pagination.pageNumber + 1} | ${site.title}` %><% } else { %><%= site.title %><% } %>'
---

<p>
    Welcome to another personal website.
</p>

<p style="font-family: monospace;">In memory of Beks</p>

<td style="vertical-align: top;">
    <pre class="asciiartdocument"><tt>                        ,/|         _.--''^``-...___.._.,;<br>                      /, \'.     _-'          ,--,,,--'''<br>                     { \    `_-''       '    /}<br>Jill                    `;;'             ;   ; ;<br>                  ._.--''     ._,,, _..'  .;.'<br>                  (,_....----'''     (,..--''</tt></pre>
</td>

<h1 class="no-accent">My last posts</h1>

<ul>
  <% list.forEach((post) => { %>
  <li>
      <article class="e-entry">
        <a href="<%= post.url %>" class="text-link p-name"><%= post.data.title %></a>
        <br>
        <time
            class="dt-published"
            datetime="<%= post.data.date.toISOString() %>"
        >
            <%= this.dateFns.format(new Date(post.data.date), 'LLLL d, yyyy') %>
        </time>    
      </article>
  </li>
  <% }) %>
</ul>

<div>
  <% if (pagination.previous) { %>
  <div>
    <a href="<%= pagination.previous.replace(/index.html$/, "") %>"><i data-feather="arrow-left"></i> Newer Posts</a>
  </div>
  <% } %> <% if (pagination.next) { %>
  <div>
    <a href="<%= pagination.next.replace(/index.html$/, "") %>">Older Posts <i data-feather="arrow-right"></i></a>
  </div>
  <% } %>
</div>


<h1 class="no-accent">My last posts</h1>

<ul>
  <% list.forEach((post) => { %>
  <li>
    <a href="<%= post.url %>" class="text-link"><%= post.data.title %></a>
    
    <div><%= this.dateFns.format(new Date(post.data.date), 'LLLL d, yyyy') %></div>
  </li>
  <% }) %>
</ul>

<div>
  <% if (pagination.previous) { %>
  <div>
    <a href="<%= pagination.previous.replace(/index.html$/, "") %>"><i data-feather="arrow-left"></i> Newer Posts</a>
  </div>
  <% } %> <% if (pagination.next) { %>
  <div>
    <a href="<%= pagination.next.replace(/index.html$/, "") %>">Older Posts <i data-feather="arrow-right"></i></a>
  </div>
  <% } %>
</div>

